{
    "extends": [
        "tslint:latest",
        "tslint-eslint-rules"
    ],
    "rules": {
        "arrow-return-shorthand": [
            true,
            "multiline"
        ],
        "arrow-parens": false,
        "class-name": true,
        "interface-name": [
            false
        ],
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            160
        ],
        "member-access": false,
        "no-consecutive-blank-lines": [
            true
        ],
        "no-duplicate-variable": true,
        "no-require-imports": false,
        "no-shadowed-variable": true,
        "no-switch-case-fall-through": true,
        "no-submodule-imports": [
            true
        ],
        //"no-use-before-declare": true,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "triple-equals": [
            true
        ],
        "typedef": [
            false,
            "call-signature",
            "parameter",
            "property-declaration",
            "member-variable-declaration"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "asyncArrow": "always",
                "constructor": "never",
                "method": "never",
                "named": "never"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ]
    }
}
